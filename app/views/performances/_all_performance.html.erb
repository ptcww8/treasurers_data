        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-responsive">
                <thead>
                  <tr>
											<th>Who came</th>
											<th>Who counted</th>
											<th>When counted</th>
											<th>When paid</th>
											<th>Who paid</th>
										  <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @performances.each do |performance| %>
                  <tr>
                                          <td><%= performance.who_came %></td>
                                          <td><%= performance.who_counted %></td>
                                          <td><%= performance.when_counted %></td>
                                          <td><%= performance.when_paid %></td>
                                          <td><%= performance.who_paid %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), performance, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_performance_path(performance), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), performance, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @performances.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No performances.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @performances if @performances.respond_to?(:total_pages) %>
                
                              </div>
            </div>
