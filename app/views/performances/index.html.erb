<% @title = "Listing performances" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Performances/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_performance_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Performance
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Who came</th>
                                          <th>Who counted</th>
                                          <th>When counted</th>
                                          <th>When paid</th>
                                          <th>Who paid</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @performances.each do |performance| %>
                  <tr>
                                          <td><%= performance.who_came %></td>
                                          <td><%= performance.who_counted %></td>
                                          <td><%= performance.when_counted %></td>
                                          <td><%= performance.when_paid %></td>
                                          <td><%= performance.who_paid %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), performance, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_performance_path(performance), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), performance, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @performances.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No performances.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @performances if @performances.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
      </div>
