<% @title = "Showing performance" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Performances/show.html.erb</code>.</p>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Who came</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @performance.who_came %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Who counted</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @performance.who_counted %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">When counted</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @performance.when_counted %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">When paid</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @performance.when_paid %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Who paid</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @performance.who_paid %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_performance_path(@performance), class: 'btn btn-primary' %>
                <%= link_to 'Back', performances_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="sidebar" class="col-md-3">
      <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
        <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
        <li class="nav-item">
        <a class="nav-link" href="#">Vacation Days</a>
        </li>
        <li class="nav-item active">
        <a class="nav-link" href="#">Salaries</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" href="#">Disciplinary Items</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" href="#">Firings</a>
        </li>
      </ul>
    </div>
  </div>
</div>
